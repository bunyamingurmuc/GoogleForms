@model ControllerCreateAccountDto
@{
    ViewData["Title"] = "CreateUser";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<form asp-controller="account" asp-action="CreateUser" method="post" class="p-3 w-75  mx-auto shadow" style="margin-top: 15%">


    <div class="mb-3">
        <label for="formGroupExampleInput" class="form-label">İsim</label>
        <input type="text" class="form-control" asp-for="Name" placeholder="İsminizi girin">
    </div>

    <div class="mb-3">
        <label for="formGroupExampleInput" class="form-label">Soyisim</label>
        <input type="text" class="form-control" asp-for="Surname" placeholder="Soyisminizi girin">
    </div>

    <div class="mb-3">
        <label for="formGroupExampleInput" class="form-label">Email</label>
        <input type="text" class="form-control" asp-for="Email" placeholder="Mail adresinizi girin">
    </div>

    <div class="mb-3">
        <label for="formGroupExampleInput2" class="form-label">Şifre</label>
        <input type="password" class="form-control" asp-for="Password" placeholder="Şifrenizi girin">
    </div>

    <div class="mb-3">
        <label for="formGroupExampleInput2" class="form-label">Şifre</label>
        <input type="password" class="form-control" asp-for="ConfirmPassword" placeholder="Tekrar şifrenizi girin">
    </div>



    <button type="submit" class="btn btn-primary">Kayıt Ol</button>

    <div class="text-danger mt-2" asp-validation-summary="ModelOnly" >

    </div>
</form>
